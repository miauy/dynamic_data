<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Orders</h2>
  <a href="/orders/new" class="btn btn-primary">+ Add Order</a>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Customer</th>
          <th>Size</th>
          <th>Toppings</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.Customer.firstName}} {{this.Customer.lastName}}</td>
          <td>{{this.size}}</td>
          <td>{{this.toppings}}</td>
          <td>
            <span class="badge 
              {{#if (eq this.status 'New')}}bg-primary{{/if}}
              {{#if (eq this.status 'Processing')}}bg-warning text-dark{{/if}}
              {{#if (eq this.status 'Completed')}}bg-success{{/if}}">
              {{this.status}}
            </span>
          </td>
          <td>
            <div class="btn-group btn-group-sm">
              <a href="/orders/{{this.id}}" class="btn btn-outline-primary">View</a>
              <a href="/orders/edit/{{this.id}}" class="btn btn-outline-secondary">Edit</a>
              <a href="/orders/delete/{{this.id}}" class="btn btn-outline-danger">Delete</a>
            </div>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="6" class="text-center">No orders found</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>