<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Orders</h1>
  <a href="/orders/create" class="btn btn-primary">Add Order</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Size</th>
      <th>Toppings</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{id}}</td>
      <td>{{Customer.firstName}} {{Customer.lastName}}</td>
      <td>{{size}}</td>
      <td>{{toppings}}</td>
      <td>
        <a href="/orders/{{id}}" class="btn btn-sm btn-info">View</a>
        <a href="/orders/{{id}}/edit" class="btn btn-sm btn-warning">Edit</a>
        <form action="/orders/{{id}}/delete" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>