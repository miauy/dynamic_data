<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Customers</h2>
  <a href="/customers/new" class="btn btn-primary">+ Add Customer</a>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>Full name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each customers}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.firstName}} {{this.lastName}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td>
            <div class="btn-group btn-group-sm">
              <a href="/customers/{{this.id}}" class="btn btn-outline-primary">View</a>
              <a href="/customers/edit/{{this.id}}" class="btn btn-outline-secondary">Edit</a>
              <a href="/customers/delete/{{this.id}}" class="btn btn-outline-danger">Delete</a>
            </div>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">No customers found</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>