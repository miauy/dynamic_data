<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Order Details</h2>
    <a href="/orders" class="btn btn-secondary">Back to List</a>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Order ID</dt>
            <dd class="col-sm-9">{{order.id}}</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">{{order.Customer.firstName}} {{order.Customer.lastName}}</dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">{{order.size}}</dd>

            <dt class="col-sm-3">Toppings</dt>
            <dd class="col-sm-9">{{order.toppings}}</dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">{{order.notes}}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge 
                    {{#if (eq order.status 'New')}}bg-primary{{/if}}
                    {{#if (eq order.status 'Processing')}}bg-warning text-dark{{/if}}
                    {{#if (eq order.status 'Completed')}}bg-success{{/if}}">
                    {{order.status}}
                </span>
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <a href="/orders/edit/{{order.id}}" class="btn btn-primary">Edit</a>
            <a href="/orders/delete/{{order.id}}" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>