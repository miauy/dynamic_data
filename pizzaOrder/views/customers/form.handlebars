<div class="card">
  <div class="card-header">
    <h2>{{#if customer}}Edit{{else}}Add{{/if}} Customer</h2>
  </div>
  <div class="card-body">
    {{> form_helpers/error_messages errors=errors}}
    <form method="POST" action="/customers{{#if customer}}/{{customer.id}}{{/if}}">
      {{> form_helpers/customer_fields customer=customer}}
      <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/customers" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>